{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reviews List</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>Rate</th>
            <th>Author Review</th>
            <th>Publicationdate</th>
            <th>Note</th>
        </tr>
        </thead>

        <tbody>
        {% for review in reviews %}
            <tr>
            <td>{{ review.id }}</td>
            <td>{{ review.text }}</td>
            <td>{{ review.userRated }}</td>
            <td>{{ review.reviewAuthor }}</td>
            <td>{{ review.publicationDate|date('d-m-Y') }}</td>
            <td>{{ review.note }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('review_show', {'id': review.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('review_edit', {'id': review.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    <ul>
        <li>
            <a href="{{ path('review_new') }}">Create a new review</a>
        </li>
    </ul>





{% endblock %}